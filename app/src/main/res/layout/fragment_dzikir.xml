<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_liver"
    tools:context=".menufragment.DzikirFragment">

    <!-- TODO: Update blank fragment layout -->
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="600dp"
    android:layout_gravity="center"
    android:layout_margin="@dimen/dimen10"
    android:background="@drawable/border_dzikir"
    android:orientation="vertical"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dzikir Yuk"
        android:textSize="35sp"
        android:textColor="@color/dark_liver"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dimen30"
        />
    <TextView
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_gravity="center"
        android:layout_marginTop="120dp"
        android:background="@drawable/border_hitung_dzikir"
        android:text="0"
        android:id="@+id/tampil_hitung_dzikir"
        android:gravity="center"
        android:textSize="60sp"
        android:textColor="@color/dark_liver"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="60dp"

        >
        <Button
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:background="@color/black"
            android:textColor="@color/bone"
            android:id="@+id/tambah_dzikir"
            android:text="Tambah"
            android:layout_margin="@dimen/dimen30"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:background="@color/black"
            android:textColor="@color/bone"
            android:id="@+id/reset_dzikir"
            android:layout_toRightOf="@id/tambah_dzikir"
            android:text="RESET"
            android:layout_marginLeft="@dimen/dimen20"
            android:layout_marginTop="30dp"
            />

    </RelativeLayout>


</LinearLayout>


</FrameLayout>