<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bone"
    tools:context=".menufragment.DzikirFragment">

    <!-- TODO: Update blank fragment layout -->
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="?actionBarSize"
    android:layout_gravity="center"
    android:layout_marginRight="@dimen/dimen10"
    android:layout_marginLeft="@dimen/dimen10"
    android:layout_marginBottom="40dp"
    android:background="@drawable/border_dzikir"
    android:orientation="vertical"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dzikir Yuk"
        android:fontFamily="@font/rubik400"
        android:textSize="35sp"
        android:textColor="@color/bone"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dimen30"
        />
    <TextView
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_gravity="center"
        android:layout_marginTop="120dp"
        android:background="@drawable/border_hitung_dzikir"
        android:fontFamily="@font/rubik400"
        android:text="0"
        android:id="@+id/tampil_hitung_dzikir"
        android:gravity="center"
        android:textSize="60sp"
        android:textColor="@color/bone"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="50dp"

        >
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:background="@color/orange_pantone"
                android:textColor="@color/bone"
                android:id="@+id/tambah_dzikir"
                android:fontFamily="@font/rubik400"
                android:text="Tambah"
                android:layout_marginTop="@dimen/dimen30"
                android:layout_marginLeft="@dimen/dimen20"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:background="@color/winter_sky"
                android:fontFamily="@font/rubik400"
                android:textColor="@color/bone"
                android:id="@+id/reset_dzikir"
                android:text="RESET"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="@dimen/dimen30"
                />

        </LinearLayout>


    </RelativeLayout>


</LinearLayout>


</FrameLayout>