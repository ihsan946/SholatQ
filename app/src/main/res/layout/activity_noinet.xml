<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".main.Noinet">

  <ImageView
      android:layout_width="@dimen/dimen200"
      android:layout_height="@dimen/dimen200"
      android:src="@drawable/no_connection"
      android:layout_centerHorizontal="true"
      android:layout_centerVertical="true"
      android:id="@+id/logo_connection"
      android:layout_marginBottom="@dimen/dimen20"
      />
  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/pesan_internet"
      android:layout_below="@id/logo_connection"
      android:layout_centerHorizontal="true"
      android:fontFamily="@font/rubik400"
      android:textSize="18sp"
      android:textColor="@color/black"
      />

  </RelativeLayout>