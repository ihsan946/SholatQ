<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="280dp"
    android:orientation="horizontal"

    >
    <RelativeLayout
        android:id="@+id/layout_recycle_jadwal"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_height="275dp"
        android:orientation="vertical"
        android:layout_margin="@dimen/dimen10"

        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/background_jadwal"
            android:src="@drawable/shubuh"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/name_jadwal_sholat"
            android:text="Shubuh "
            android:layout_marginTop="@dimen/dimen100"
            android:layout_centerHorizontal="true"
            android:textSize="40sp"
            android:textColor="@color/bone"
            android:layout_marginBottom="@dimen/dimen20"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/value_jadwal_sholat"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/name_jadwal_sholat"
            android:textColor="@color/bone"
            android:text="--:--"
            android:textSize="40sp"
            />








    </RelativeLayout>

</LinearLayout>