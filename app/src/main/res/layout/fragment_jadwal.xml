<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/jet"
    tools:context=".menufragment.JadwalFragment">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/dimen10"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jadwal sholat hari ini"
            android:textColor="@color/white"
            android:layout_above="@id/layoutbawah_jadwal"
            android:textSize="20sp"
            android:layout_marginLeft="@dimen/dimen10"
            />

        <RelativeLayout
            android:id="@+id/layoutbawah_jadwal"
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_height="@dimen/dimen525"
            android:background="@drawable/border_jadwal"
            android:layout_margin="@dimen/dimen10"
            android:padding="@dimen/dimen10"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/name_shubuh"
                android:text="Shubuh : "
                android:textSize="@dimen/sp30"
                android:layout_marginBottom="@dimen/dimen20"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/value_shubuh"
                android:layout_toRightOf="@id/name_shubuh"
                android:text="--:--"
                android:textSize="@dimen/sp30"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/name_dzuhur"
                android:layout_below="@id/name_shubuh"
                android:text="Dzuhur : "
                android:textSize="@dimen/sp30"
                android:layout_marginBottom="@dimen/dimen20"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/value_dzuhur"
                android:layout_below="@id/name_shubuh"
                android:layout_toRightOf="@id/name_dzuhur"
                android:text="--:--"
                android:textSize="@dimen/sp30"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/name_ashar"
                android:layout_below="@id/name_dzuhur"
                android:text="Ashar : "
                android:textSize="@dimen/sp30"
                android:layout_marginBottom="@dimen/dimen20"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/value_ashar"
                android:layout_below="@id/name_dzuhur"
                android:layout_toRightOf="@id/name_ashar"
                android:text="--:--"
                android:textSize="@dimen/sp30"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/name_maghrib"
                android:layout_below="@id/name_ashar"
                android:text="Maghrib : "
                android:textSize="@dimen/sp30"
                android:layout_marginBottom="@dimen/dimen20"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/value_maghrib"
                android:layout_below="@id/name_ashar"
                android:layout_toRightOf="@id/name_maghrib"
                android:text="--:--"
                android:textSize="@dimen/sp30"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/name_isya"
                android:layout_below="@id/name_maghrib"
                android:text="Isya : "
                android:textSize="@dimen/sp30"
                android:layout_marginBottom="@dimen/dimen20"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/value_isya"
                android:layout_below="@id/name_maghrib"
                android:layout_toRightOf="@id/name_isya"
                android:text="--:--"
                android:textSize="@dimen/sp30"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/name_lokasi"
                android:layout_alignParentBottom="true"
                android:text="IP address Anda : "
                android:textSize="22sp"
                android:layout_marginBottom="@dimen/dimen30"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/value_lokasi"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@id/name_lokasi"
                android:text="----------"
                android:textSize="22sp"
                android:layout_marginBottom="@dimen/dimen30"
                />




        </RelativeLayout>

    </RelativeLayout>



</FrameLayout>